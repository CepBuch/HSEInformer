<?xml version="1.0" encoding="utf-8" ?>
<resources>
  <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
    <item name="colorPrimary">@color/dark</item>
    <item name="colorPrimaryDark">@color/dark</item>
    <item name="colorAccent">@color/dark</item>
    <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
  </style>

  <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
    <item name="color">@color/white</item>
    <item  name="spinBars">true</item>
  </style>

  <style name="hse_button" parent="@android:style/Widget.Button">
    <item name="android:gravity">center_vertical|center_horizontal</item>
    <item name="android:textColor">@drawable/button_text</item>
    <item name="android:textSize">16sp</item>
    <item name="android:background">@drawable/button_background</item>
    <item name="android:focusable">true</item>
    <item name="android:clickable">true</item>
  </style>


  <style name="group_button" parent="@android:style/Widget.Button">
    <item name="android:gravity">center_vertical|center_horizontal</item>
    <item name="android:textColor">@drawable/group_text</item>
    <item name="android:textSize">18sp</item>
    <item name="android:background">@drawable/group_shape</item>
    <item name="android:focusable">true</item>
    <item name="android:clickable">true</item>
  </style>
</resources>